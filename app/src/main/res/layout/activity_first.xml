<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aditya.discovervitcc.first">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/picture2"
        android:id="@+id/pic1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic1"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:text="DISCOVER"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Discover is an aimed to assist Vitcc students to find all utility places near our campus a click away. U can register and give your feedback about the place"
        android:textColor="#ffffff"
        android:textSize="16dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/pic1"
        android:id="@+id/si1"
        android:text="CREATE AN ACCOUNT"
        android:textColor="#ffffff"
        android:textAlignment="textStart"
        android:paddingRight="15dp"
        android:background="#50ffffff"
        android:textSize="20dp"
        android:paddingLeft="40dp"
        android:drawableRight="@drawable/lf"
        android:layout_marginTop="230dp"/>
    <Button
        android:layout_width="match_parent"
        android:text="LOGIN"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:drawableRight="@drawable/lf"
        android:layout_height="60dp"
        android:paddingRight="15dp"
        android:background="#50ffffff"
        android:id="@+id/su1"
        android:layout_below="@+id/si1"
        />
</RelativeLayout>
