<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@mipmap/pic5"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aditya.discovervitcc.signin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/r1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="WELCOME"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="17dp"
        android:text="Login and find details of all the places you need"/>


    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="100dp"
        android:textCursorDrawable="@drawable/cursor"
        android:hint="Enter Your Email"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:background="@drawable/outline"
        android:textColorHint="#ffffff"
        android:id="@+id/email"/>
    <EditText
        android:layout_width="300dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:background="@drawable/outline"
        android:layout_below="@id/email"
        android:hint="Password"
        android:id="@+id/password"
        android:textColorHint="#ffffff"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonselector"
        android:text="SIGN IN"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dp"
        android:id="@+id/signin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0000"
        android:text="CREATE AN ACCOUNT HERE"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/signin"
        android:layout_marginTop="15dp"
        android:id="@+id/s1"/>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:id="@+id/pr1"
            android:layout_below="@+id/s1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/r2">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p1"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:background="#0000"
            android:src="@mipmap/dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:paddingLeft="5dp"
            android:layout_below="@+id/p1"
            android:layout_marginTop="20dp"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="Enter Your Email"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            android:background="@drawable/outline"
            android:textColorHint="#ffffff"
            android:id="@+id/email1"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="Password"
            android:textColor="#ffffff"
            android:background="@drawable/outline"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/email1"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:id="@+id/pass1"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="Confirm Password"
            android:background="@drawable/outline"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:layout_below="@+id/pass1"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:id="@+id/pass2"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonselector"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_below="@+id/pass2"
            android:layout_marginTop="15dp"
            android:id="@+id/signup"/>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:id="@+id/pr2"
            android:layout_below="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</RelativeLayout>
