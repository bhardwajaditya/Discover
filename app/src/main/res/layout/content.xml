<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:background="#e5e2e2"
    android:paddingLeft="16dp"
    android:paddingBottom="80dp"
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Says"
        android:textStyle="bold"
        android:fontFamily=""
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:id="@+id/c1"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        android:layout_below="@+id/c1"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:text="Android 8.0 (API level 26) and Android Support Library 26 introduce support for APIs to request fonts from a provider application instead of bundling files into the APK or letting the APK download fonts. The feature is available on devices running Android API versions 14 and higher through the Support Library 26"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c2"
        android:id="@+id/c3"
        android:text="Details"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c3"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/d1"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/d1"
        android:layout_below="@+id/c3"
        android:textColor="#000"
        android:id="@+id/d3"
        android:text="VIT UNIVERSITY CHENNAI CAMPUS VANDALUR KELAMBAKKAM ROAD"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d3"
        android:layout_marginTop="10dp"
        android:text="Time"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/d2"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/d1"
        android:layout_below="@+id/d3"
        android:textColor="#000"
        android:id="@+id/d4"
        android:text="VIT UNIVERSITY CHENNAI CAMPUS VANDALUR KELAMBAKKAM ROAD"
        android:layout_marginTop="10dp"/>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/d4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:context="com.example.aditya.discovervitcc.details" />
</RelativeLayout>