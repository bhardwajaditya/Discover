<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:theme="@style/AppTheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:minHeight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="#7c17d8"
        android:id="@+id/t1"
        android:fitsSystemWindows="true"
        app:theme="@style/AppTheme.actionbar"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DISCOVER"
            android:layout_marginLeft="83dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#7c17d8"
            android:background="#ffffff"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    tools:context="com.example.aditya.discovervitcc.menu">
    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/city_tour"
        android:id="@+id/button1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/restaurant"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_marginTop="0dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/button3"
        android:background="@mipmap/utility"
        android:layout_below="@+id/button2"
        android:layout_marginTop="0dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/button4"

        android:layout_below="@+id/button3"
        android:layout_marginTop="0dp"/>



</RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>